@model DotNetTask.Dto.UserDto
@using System.Data;
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_adminlayout.cshtml";
}
@section notification {
	<partial name="_Notification.cshtml" />
}
<div class="page-wrapper">
	<div class="content container-fluid">
		
		
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<h4 class="card-title mb-0">Student Form</h4>
					</div>
					<div class="card-body">
						<form area="Admin" asp-controller="Account" asp-action="Register" method="post">
							<div class="row">
								<div class="input-block col-sm-6 mb-6">
									<label class="col-form-label">Full Name</label>
									<input asp-for="Name" name="Name" type="text" class="form-control" />	<span asp-validation-for="Name" class="text-danger"></span>
								</div>

								<div class="input-block col-sm-6 mb-6">
									<label class="col-form-label">Email Address</label>
									<input asp-for="Email" type="email" name="Email" class="form-control" />	<span asp-validation-for="Email" class="text-danger"></span>
								</div>
							</div>
							<div class="row">
								<div class="input-block col-sm-6 mb-6">
									<label class="col-form-label">Location</label>
									<input asp-for="Location" name="Location" type="text" class="form-control" />	<span asp-validation-for="Location" class="text-danger"></span>
								</div>
								<div class="input-block col-sm-6 mb-6">
									<label class="col-form-label">AdharCard Number</label>
									<input asp-for="AdharCard" name="AdharCard" type="text" class="form-control" />	<span asp-validation-for="AdharCard" class="text-danger"></span>
								</div>
								
							</div>

							<div class="row">
							<div class="input-block col-sm-6 mb-6">
								<label class="col-form-label">Contact Number</label>
								<input asp-for="Phone" name="Phone" type="text" class="form-control" />
									<span asp-validation-for="Phone" class="text-danger"></span>
							</div>

								<div class="text-end">
									<button type="submit" class="btn btn-primary">Submit</button>
							
							</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- /Page Wrapper -->
